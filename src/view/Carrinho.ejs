<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrinho de Compras</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .produto {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 10px 0;
            display: flex;
            align-items: center;
        }
        .produto img {
            max-width: 50px;
            margin-right: 10px;
        }
        .produto h2 {
            font-size: 18px;
            margin: 0;
        }
        .produto p {
            margin: 5px 0;
        }
    </style>
    <script>
        function verificar() {
            const total = document.getElementById('totalprecooo');
            const botao = document.getElementById('botao')
            if (total.innerText === "0.00") { // use innerText para comparar o valor do elemento
                botao.style.display = 'none'; // use display para esconder o elemento
            }
        }

    </script>
</head>
<body onload="verificar()">
    <h2>Carrinho de Compras</h2>
    <% for (const codigo in produtos) { %>
        <div class="produto">
            <img src="../imagem/<%= produtos[codigo].imagem %>" alt="<%= produtos[codigo].descricao %>">
            <div>
                <h2><%= produtos[codigo].descricao %></h2>
                <p>Preço: R$ <%= parseFloat(produtos[codigo].preco).toFixed(2) %></p>
                <p>Quantidade no Carrinho: <%= carrinho[codigo] %></p>
                <p>Quantidade Disponível: <%= produtos[codigo].quantidadeDisponivel %></p>
                <p>Preço Total: R$ <%= (produtos[codigo].preco * carrinho[codigo]).toFixed(2) %></p>

                <form action="/update" method="post">
                    <input type="hidden" value="<%= codigo %>" name="codigo">
                    <input type="number" min="1" value="<%= carrinho[codigo] %>" name="quantidade">
                    <input type="submit" value="Atualizar Quantidade">
                </form>
                <form action="/remove" method="post">
                    <input type="hidden" value="<%= codigo %>" name="codigo">
                    <input type="submit" value="Remover do Carrinho">
                </form>
            </div>
        </div>
    <% } %>
    <h3 style="display: inline;">Preço Total Geral: R$ </h3>
    <h3 id="totalprecooo" style="display: inline;"><%= totalPreco !== undefined ? totalPreco.toFixed(2) : '0.00' %></h3>
    <form action="/finalizar-compra" method="POST">
        <button type="submit" id="botao">Finalizar Compra</button>
    </form>


</body>
</html>
