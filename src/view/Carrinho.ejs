<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrinho de Compras</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link para seu CSS -->
</head>
<body>
    <header>
        <h1>Carrinho de Compras</h1>
        <a href="/">Voltar à loja</a>
    </header>
    <main>
        <% if (produtos.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Imagem</th>
                        <th>Descrição</th>
                        <th>Preço</th>
                        <th>Quantidade</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <% produtos.forEach(produto => { %>
                        <tr>
                            <td><img src="<%= produto.imagem %>" alt="<%= produto.descricao %>" style="width: 50px;"></td>
                            <td><%= produto.descricao %></td>
                            <td>R$ <%= produto.preco.toFixed(2) %></td>
                            <td>
                                <form action="/atualiza-quantidade" method="POST">
                                    <input type="hidden" name="codigo" value="<%= produto.codigo %>">
                                    <input type="number" name="quantidade" value="<%= produto.qtdeCarrinho %>" min="1" required>
                                    <button type="submit">Atualizar</button>
                                </form>
                            </td>
                            <td>
                                <form action="/remove" method="POST">
                                    <input type="hidden" name="codigo" value="<%= produto.codigo %>">
                                    <button type="submit">Remover</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <div>
                <a href="/finalizar-compra">Finalizar Compra</a> <!-- Link para finalizar a compra -->
            </div>
        <% } else { %>
            <p>Seu carrinho está vazio.</p>
            <a href="/" target="pr">Continuar comprando</a>
        <% } %>
    </main>
    <footer>
        <p>&copy; 2024 Sua Loja</p>
    </footer>
</body>
</html>
